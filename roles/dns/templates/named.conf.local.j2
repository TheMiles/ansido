{% for d in zones %}
zone "{{ d.zone }}" {
    type master;
    file "/etc/bind/db.{{ d.zone }}";
};
{% endfor %}

{% for d in reverse_zones %}
zone "{{ d.reverse_zone[:d.reverse_zone.rfind('.')] }}.in-addr.arpa" {
    type master;
    file "/etc/bind/db.{{ d.reverse_zone[d.reverse_zone.rfind('.')+1:] }}";
};
{% endfor %}

